<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="312dp"
    tools:background="@color/bubbleGumPink"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/topicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        tools:text="Topic Name Here"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <org.jnanaprabodhini.happyteacher.view.HorizontalPagerRecyclerView
        android:id="@+id/lessonsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/layout_fade_in"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/topicTextView" />

    <FrameLayout
        app:layout_constraintTop_toBottomOf="@+id/topicTextView"
        android:id="@+id/progressBarFrame"
        android:visibility="visible"
        android:layout_width="@dimen/width_lesson_header_card"
        android:layout_height="@dimen/height_lesson_header_card" >
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/topicTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:id="@+id/emptyView"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="@dimen/width_lesson_header_card"
        android:layout_height="@dimen/height_lesson_header_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/emptyTextView"
            android:text="@string/there_are_no_lessons_for_this_topic_yet"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contributeButton"
            android:layout_margin="16dp"
            style="@style/Button"
            android:text="@string/contribute"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>