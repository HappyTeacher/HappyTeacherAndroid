<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="org.jnanaprabodhini.happyteacher.activity.CardEditorActivity">

    <ScrollView
        android:id="@+id/attachmentButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/attachment_buttons_layout" />

    </ScrollView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/headerTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attachmentButtonsLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/headerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/card_header"
            android:inputType="textCapSentences"
            android:visibility="gone" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bodyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/bodyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/card_body"
            android:inputType="textCapSentences|textLongMessage|textMultiLine"
            android:visibility="gone" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/saveButton"
        android:text="@string/Save"
        android:padding="18dp"
        android:visibility="gone"
        style="@style/Button.Accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyTextInputLayout"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
