<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layoutAnimation="@anim/layout_fade_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/backwardPager"
        style="@style/RecyclerViewHorizontalPager"
        android:layout_gravity="start|center_vertical"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_chevron_left_purple_24dp"/>

    <ImageView
        android:id="@+id/forwardPager"
        style="@style/RecyclerViewHorizontalPager"
        android:layout_gravity="end|center_vertical"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_chevron_right_purple_24dp"/>

</FrameLayout>