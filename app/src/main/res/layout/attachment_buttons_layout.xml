<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mediumGray"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/addImageButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="Add Image"
        android:gravity="center"
        android:padding="18dp"
        android:textColor="@color/card_editor_attachment"
        android:drawableTop="@drawable/ic_image_statelist_48dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Add Video"
        android:gravity="center"
        android:padding="18dp"
        android:textColor="@color/card_editor_attachment"
        android:clickable="true"
        android:focusable="true"
        android:drawableTop="@drawable/ic_videocam_statelist_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Add File"
        android:gravity="center"
        android:padding="18dp"
        android:textColor="@color/card_editor_attachment"
        android:clickable="true"
        android:focusable="true"
        android:drawableTop="@drawable/ic_attach_file_statelist_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>