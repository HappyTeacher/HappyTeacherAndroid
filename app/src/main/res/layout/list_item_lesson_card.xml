<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/headerMediaFrame"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lesson_card_media_frame_height">
            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/imageGalleryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/imageScrollArrowView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/colorAccentTransparent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp"/>
            </FrameLayout>
            <WebView
                android:id="@+id/youtubePlayerWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <TextView
            android:id="@+id/headerTextView"
            style="@style/LessonCardText.Header"/>

        <TextView
            android:id="@+id/bodyTextView"
            style="@style/LessonCardText.Body"/>

        <TextView
            android:id="@+id/attachmentDownloadButton"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/ripple_blue"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:padding="12dp"
            android:drawablePadding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</android.support.v7.widget.CardView>