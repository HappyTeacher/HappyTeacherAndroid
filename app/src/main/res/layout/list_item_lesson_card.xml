<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/youtubeFrame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lesson_card_media_frame_height">
            <ImageView
                android:id="@+id/youtubeThumbnailImageView"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/youtubePlayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"/>
        </FrameLayout>

        <TextView
            android:id="@+id/headerTextView"
            style="@style/LessonCardText.Header"/>

        <TextView
            android:id="@+id/bodyTextView"
            style="@style/LessonCardText.Body"/>

    </LinearLayout>

</android.support.v7.widget.CardView>