<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PurpleSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:dropDownVerticalOffset">@dimen/spinner_item_height</item>
    </style>

    <style name="PurpleSpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:background">@drawable/ripple_accent_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ChildSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:dropDownVerticalOffset">@dimen/spinner_item_height</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <style name="ChildSpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:background">@color/lightGrayShadow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HeaderCardText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="HeaderCardTitleText" parent="HeaderCardText">
        <item name="android:layout_height">60dp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="HeaderCardSubheaderText" parent="HeaderCardText">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HeaderCardSubSubheaderText" parent="HeaderCardText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SyllabusLessonTopicHeaderText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SyllabusLessonTopicHeaderText.Title" parent="SyllabusLessonTopicHeaderText">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SyllabusLessonTopicHeaderText.Subtitle" parent="SyllabusLessonTopicHeaderText">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="DialogHeaderText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DialogHeaderText.Title" parent="DialogHeaderText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="DialogHeaderText.Subtitle" parent="DialogHeaderText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SyllabusLessonItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SyllabusLessonItemText.Title" parent="SyllabusLessonItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SyllabusLessonItemText.TopicCount" parent="SyllabusLessonItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="fontPath">fonts/Roboto-LightItalic.ttf</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/primary_button_pill</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EmptyListFeedbackText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">32dp</item>
    </style>

</resources>
