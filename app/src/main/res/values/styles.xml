<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PurpleSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
    </style>

    <style name="PurpleSpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:background">@drawable/ripple_accent_purple</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
